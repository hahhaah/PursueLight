<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_edge"
            android:src="@drawable/ic_back" />

        <TextView
            android:textColor="@color/stateBar"
            android:text="@string/modify_info"
            android:textSize="@dimen/textsize_8"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/shape_input"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:src="@drawable/name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/name_edit"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:textColorHint = "@color/colorGrey"
            android:layout_marginLeft="6dp"
            android:hint="@string/input_nickname"
            android:textColor="@color/colorDarkGrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="25dp"
        android:padding="8dp"
        android:background="@drawable/shape_input"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <EditText
            android:id="@+id/input_intro"
            android:inputType="text"
            android:background="@null"
            android:textColorHint = "@color/colorGrey"
            android:textColor="@color/colorDarkGrey"
            android:hint="@string/input_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Button
        android:id="@+id/sure_mod"
        android:layout_gravity="center"
        android:text="@string/sure"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/selector_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
     />
</LinearLayout>